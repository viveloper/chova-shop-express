<%- include('../../partials/header') -%>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">상품정보 생성</h1>
</div>

<form method="post" enctype="multipart/form-data" action="/admin/product">
  <div class="form-group">
    <label for="product-name">상품 이름</label>
    <input type="text" class="form-control" id="product-name" placeholder="상품 이름" name="name" />
  </div>
  <div class="form-group">
    <label for="product-name">상품 이미지</label>
    <input type="file" class="form-control" id="product-name" placeholder="사용자 이름" name="image" />
  </div>
  <div class="form-group">
    <label for="product-price">상품 가격</label>
    <input type="number" class="form-control" id="product-price" name="price" />
  </div>
  <div class="form-group">
    <label for="product-lastLoginAt">카테고리</label>
    <select class="form-control" name="category">
      <% categories.forEach((category) => { %>
      <option value="<%=category.id%>"><%= category.name %></option>
      <%}) %>
    </select>
  </div>
  <div class="form-group">
    <label for="product-info">상품 정보</label>
    <textarea class="form-control" id="product-info" name="info"></textarea>
  </div>

  <div class="float-right">
    <ul class="list-inline">
      <li class="list-inline-item">
        <button type="submit" id="edit-btn" class="btn btn-primary">추가</button>
      </li>
    </ul>
  </div>
</form>
<%- include('../../partials/footer') -%>
